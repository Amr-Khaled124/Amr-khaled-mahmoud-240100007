#include <iostream>
using namespace std;

int main(){
    int n , k ;
    cin >> n >> k ;

    int score[100];
    for (int i = 0; i < n; i++)
    cin >> score[i];

    int out = score[k - 1 ];
    int count = 0;

    for (int i = 0 ; i<n; i++){
        if ( score[i >= out && score[i]>0]){
            count++;
        }
    }
    cout << count ;
    return 0 ;
}
