#include <iostream>
#include <string>
using namespace std;

int main() {
    string n;
    cin >> n;

    int lucky_num = 0;

    for (char c : n) {
        if (c == '4' || c == '7')
            lucky_num++;
    }

    string countStr = to_string(lucky_num);
    bool isNearlyLucky = true;

    for (char c : countStr) {
        if (c != '4' && c != '7') {
            isNearlyLucky = false;
            break;
        }
    }

    if (isNearlyLucky)
        cout << "YES" << endl;
    else
        cout << "NO" << endl;

    return 0;
}
